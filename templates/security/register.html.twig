{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="login-form bg-light mt-4 p-4">
				{{ form_start(registrationForm, { 'attr' : { 'class': 'row g-3' } }) }}
                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
                    {% if not registrationForm.vars.valid %}
                        <div class="alert alert-error">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}

                    <div class="col-12">
                        {{ form_row(registrationForm.email, {'attr' : { 'class': 'form-control' } }) }}
                    </div>
                    <div class="col-12">
                    {{ form_row(registrationForm.plainPassword, {'attr' : { 'class': 'form-control' } }) }}
                    </div>
                    <div class="col-12 form-check">
                    {{ form_row(registrationForm.agreeTerms, {'attr' : { 'class': 'd-flex form-check' } }) }}
                    </div>

                    <div class="col-12">
                        Alredy a member? <a class="nav-link text-black-50" href="{{ path('app_login') }}">Sign in</a>
                    </div>

                    <button type="submit" class="vw-10 btn btn-lg btn-primary">Register</button>
				{{ form_end(registrationForm) }}

			</div>
		</div>
	</div>
{% endblock %}
