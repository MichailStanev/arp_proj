{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

	<body class="dark">
		{% set current_path = app.request.get('_route') %}
		<!-- Sidebar -->
		<div class="sidebar">
			<a href="#" class="logo">
				<i class='bx bx-code-alt'></i>
				<div class="logo-name">
					<span>ERP-MN</div>
				</a>
				<ul class="side-menu">
					<li {{ (current_path == 'app_dashboard') ? 'class="active"' }}>
						<a href="{{ path('app_dashboard') }}">
							<i class='bx bxs-dashboard'></i>Dashboard</a>
					</li>
					<li {{ (current_path == 'app_dashboard_vehicle') ? 'class="active"' }}>
						<a href="{{ path('app_dashboard_vehicle') }}">
							<i class='bx bxs-dashboard'></i>Vehicles</a>
					</li>
				</ul>
				<ul class="side-menu">
					<li>
						<a href="{{ path('app_logout') }}" class="logout">
							<i class='bx bx-log-out-circle'></i>Logout</a>
					</li>
				</ul>
			</div>
			<!-- End of Sidebar -->

			<!-- Main Content -->
			<div
				class="content">
				<!-- Navbar -->
				<nav>
					<i class='bx bx-menu'></i>
					<form action="#">
						<div class="form-input">
							<input type="search" placeholder="Search...">
							<button class="search-btn" type="submit">
								<i class='bx bx-search'></i>
							</button>
						</div>
					</form>
					{# <input type="checkbox" id="theme-toggle" hidden> #}
					{# <label for="theme-toggle" class="theme-toggle"></label> #}
					<a href="#" class="notif">
						<i class='bx bx-bell'></i>
						<span class="count">12</span>
					</a>
					<a href="#" class="profile">
						<img src="images/logo.png">
					</a>
				</nav>

				<!-- End of Navbar -->

				<main>
					{% block d_content %}{% endblock %}
				</main>

			</div>
		</body>
	</body>
{% endblock %}
